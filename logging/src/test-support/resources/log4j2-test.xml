<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitorInterval="30">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%sn | %d{yyyy-MM-dd HH:mm:ss.SSSZZZ} | %t | %-5level | %c{1} | %location | %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="io.netty" level="INFO"/>
        <Logger name="org.ethereum.beacon.discovery" level="TRACE"/>
        <Logger name="tech.pegasys.artemis.networking.eth2.rpc" level="INFO"/>
        <Logger name="tech.pegasys.artemis.networking.eth2.peers" level="INFO"/>
        <Root level="TRACE">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
